{% extends 'base.html.twig' %}

{% block title %}Snowtricks -login{% endblock %}

{% block main %}
<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-lg-8">
                <br>
                <br>
                <h2 class="tricks-modal-title text-secondary mb-0 text-center">Login</h2>
                <br><br>
                <div class="form-floating border">

                    <form action="{{ path('security_login') }}" method="post">

                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />
                        </div>

                        <div class="mb-3"><label for="password" class="form-label required">Password</label>    
                            <input type="password" id="password" name="_password" class="form-control" required="required" placeHolder="Your password" class="form-control"/>
                        </div> 

                        <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}" />
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                        {# If you want to control the URL the user is redirected to on success
                        <input type="hidden" name="_target_path" value="/account" /> #}

                        <br>  
                        <a href="#">Forgot password ? </a>
                        <br><br><br>

                        <button class="w-50 btn btn-lg btn-info" type="submit">login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
