{% extends 'base.html.twig' %}

{% block title %}Snowtricks{% endblock %}

{% block visualCentral %}
<header class="masthead text-white text-center home-background">
    <div class="container">
        <div class="slogan">
            <h1>Share yours tricks</h1>
            <H2class="pre-wrap masthead-subheading font-weight-light mb-0">Push your limits and share incredible
                experiences
                friends. </h2>
        </div>

        <!-- go down to the tricks -->
        <div>
            <a class="js-scroll-trigger d-block text-center text-white rounded" href="#tricks">
                <i class=" bi bi-arrow-down-circle-fill fa-3x chevron-down"></i>
            </a>
        </div>
</header>
{% endblock %}

{% block main%}
<section class="page-section tricks" id="tricks">
    <div class="container">
        <!-- tricks Grid Items -->
        <div class="row justify-content-center">
            {% for trick in tricks %}
            <!-- tricks Items-->
            <div class="col-md-2 col-lg-2 mb-5">
                <div class="mx-auto">
                    <div class="d-flex align-items-center justify-content-center h-100 w-100">
                        <div class="card">
                            <img class="img-fluid" src="assets/img/tricks/{{ trick.picture }}"
                                alt="{{ trick.title|striptags}}" />
                            <div class="card-body">
                                <a href="tricks/details/{{ trick.slug }}" class="link-primary">{{
                                    trick.title|striptags}}</a>

                                {# Only if connected #}
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <span>
                                    <a href="#" class="float-right ml-1" data-bs-toggle="modal">
                                        <i class="bi bi-trash-fill iconTricks"></i>
                                    </a>

                                    {# <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal-dialog"
                                        data-bs-target="modal-dialog">
                                        Launch demo modal
                                    </button> #}

                                    <a href="/tricks/modification/{{ trick.slug }}" class="float-right ml-1">
                                        <i class="bi bi-pencil-fill iconTricks"></i>
                                    </a>
                                </span>
                                {% endif %}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <!-- go up tricks Items -->
    <div class="d-flex align-items-center justify-content-center h-100 w-100">
        <a class="arrow-up" href="#tricks">
            <i class=" bi bi-arrow-up-circle-fill fa-3x"></i>
        </a>

        <div class="row justify-content-center m-3">
            {# <a href="#" id="loadMoreTrick"> #}
                <i class="fa fa-home"></i>
                <button class="btn"><i class="bi bi-plus-circle-fill fa-3x"></i>
                    {# </a> #}
        </div>
    </div>
</section>
{% endblock %}