{############## footer ##############}
    {% block footer %}
    <footer class="copyright py-4 text-white {{ ifOfOrNot }}">

        <div class="container">
            <div class="row align-items-start">
                <div class="col align-self-start">
                    {############## Copyright or home ##############}
                    <!-- Copyright or home-->
                    <ul class="list-inline-item">
                        <li class="list-inline-item menuBottom  bottom-0">
