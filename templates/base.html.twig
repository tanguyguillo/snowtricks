    {# footer not fixed for home page #}
    {% set current_path = app.request.get('_route') %}
    {% set ifOfOrNot = '' %}
    {% if current_path == 'home' %}
    {% set ifOfOrNot = '' %}
    {% else %}
    {% set ifOfOrNot = 'position-fixed' %}
    {% endif %}



    {% block footer %}
    <!-- Copyright Section-->
    <footer class="copyright py-4 text-left text-white {{ ifOfOrNot }}">


        <ul class="list-inline-item text-left">
            <li class="list-inline-item menuBottom">
                <a href="{{ app.request.getSchemeAndHttpHost() }}/">
                    <button class="btn btn-menu-down"><i class="fa fa-home"></i></button>
            </li>

            <li class="list-inline-item">
                <span class="footer-below">
                    Copyright &copy; {{ "now"|date("Y") }}
                </span>
            </li>


            <!-- not if connected : login + registration -->
            {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}

            <li class="list-inline-item menuBottom">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            </li>

            <li class="list-inline-item menuBottom">
                <a href="{{ app.request.getSchemeAndHttpHost() }}/login">
                    <button class="btn btn-menu-down"><i class="fa fa-sign-in" aria-hidden="true"></i></button>
                </a>
            </li>
            <li class="list-inline-item menuBottom">

                <a href="{{ app.request.getSchemeAndHttpHost() }}/registration">
                    <button class="btn btn-menu-down"><i class="fa fa-user-plus"></i></button>
                </a>
            </li>
            {% endif %}

            <!-- if connected -->
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <li class="list-inline-item menuBottom">
                <a href="{{ app.request.getSchemeAndHttpHost() }}/tricks/add">
                    <button class="btn btn-menu-down"><i class="fa fa-bookmark"></i></button>
                </a>
            </li>

            <li class="list-inline-item menuBottom">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            </li>

            <li class="list-inline-item menuBottom">
                <a href="{{ app.request.getSchemeAndHttpHost() }}/logout">
                    <button class="btn btn-menu-down"><i class="fa fa-sign-out"></i></button>
            </li>

            {% endif %}
        </ul>


    </footer>
    {% endblock %}

