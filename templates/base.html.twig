<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Jimmy Sweat, Community, Tricks, snowboard">
    <meta name="author" content="">

    <title>
        {% block title %}Snowtricks{% endblock %}
    </title>

    {#
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    #}

    <!--avicon.ico in the root directory -->
    <link rel="apple-touch-icon" href="{{ app.request.getSchemeAndHttpHost() }}/icon.png">

    {% block stylesheets %}

    <!-- Font Awesome icons (free version)-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"
        crossorigin="anonymous"></script>

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="{{ app.request.getSchemeAndHttpHost() }}/css/styles.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Fonts CSS-->
    <link rel="stylesheet" href="{{ app.request.getSchemeAndHttpHost() }}/css/heading.css">
    <link rel="stylesheet" href="{{ app.request.getSchemeAndHttpHost() }}/css/body.css">
    <link rel="stylesheet" href="{{ app.request.getSchemeAndHttpHost() }}/css/tricks.css">
    {% endblock %}

</head>

<body id="page-top">

    {# {{ is_granted(role, object = null, field = null) }} #}
    {% block menuTop %}
    <nav class="navbar navbar-expand-lg bg-secondary fixed-top" id="mainNav">

        <a href="{{ app.request.getSchemeAndHttpHost() }}/#page-top">
            <img src="{{ app.request.getSchemeAndHttpHost() }}/assets/logo/logo-jimmy-sweat-top.png" alt="Logo Jimmy Sweat"
                class="logoTop" />
        </a>

        <button class="navbar-toggler navbar-toggler-right font-weight-bold bg-primary text-white rounded" type="button"
            data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
            aria-expanded="false" aria-label="Toggle navigation">Menu <i class="fas fa-bars"></i></button>

        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">

                <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" <a
                        href="{{ app.request.getSchemeAndHttpHost() }}/#page-top">Home </a>
                </li>

                <li class="py-3 px-0 px-lg-3 rounded js-scroll-trigger  separator">|</li>

                <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" <a
                        href="{{ app.request.getSchemeAndHttpHost() }}/#tricks">Tricks</a>
                </li>

                <li class="py-3 px-0 px-lg-3 rounded js-scroll-trigger separator">|</li>

                <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" <a
                        href="{{ app.request.getSchemeAndHttpHost() }}/login">Sign in</a>
                </li>

                <li class="py-3 px-0 px-lg-3 rounded js-scroll-trigger separator">|</li>

                <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" <a
                        href="{{ app.request.getSchemeAndHttpHost() }}/registration">Sign up</a>

                    <!-- if connected possibibity to deconnect)-->
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li class="py-3 px-0 px-lg-3 rounded js-scroll-trigger separator">|</li>
                <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" <a class="link"
                        href="{{ app.request.getSchemeAndHttpHost() }}/logout"}}">Logout</a>
                    {% endif %}

            </ul>
        </div>
        </div>
    </nav>
    {% endblock %}

    {% block visualCentral %}
    {% endblock %}

    {% block begincContainer %}

    {% endblock %}

    {% block main%}
    {% endblock %}

    {% block modal %}
    <!-- tricks Modal-->
    <div class="tricks-modal modal fade" id="tricksDelete" tabindex="-1" role="dialog"
        aria-labelledby="#tricksModal0Label" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i
                            class="fas fa-times"></i></span></button>
                <div class="modal-body text-center">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <!-- tricks Modal - Title-->
                                <h2 class="tricks-modal-title text-secondary mb-0">Delete the trick</h2>

                                <!-- tricks Modal - Image <img class="img-fluid rounded mb-5"
                                    src="" alt="" /> -->
                                <!-- tricks Modal - Text-->
                                <p class="mb-5">Are your sur to deteting this item ?
                                </p>
                                <button class="btn btn-secondary" href="#" data-dismiss="modal">
                                    <i class="fas fa-times fa-fw"></i>Yes</button>

                                <button class="btn btn btn-warning" href="#" data-dismiss="modal">
                                    <i class="fas fa-times fa-fw"></i>No</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- sign in -->
    <div class="tricks-modal modal fade" id="signin" tabindex="-1" role="dialog" aria-labelledby="#tricksModal0Label"
        aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i
                            <i class="fas fa-times"></i></span></button>
                <div class="modal-body text-center">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <!-- tricks Modal - Title-->
                                <h2 class="tricks-modal-title text-secondary mb-0">Login</h2>

                                <br> <br> <br>
                                <form>
                                    <div class="form-floating">
                                        <label for="floatingInput">User Name</label>
                                        <input type="text" class="form-control" id="floatingInput"
                                            placeholder="My user tricks-name">
                                    </div>
                                    <br>

                                    <div class="form-floating">
                                        <label for="floatingPassword">Password</label>
                                        <input type="password" class="form-control" id="floatingPassword"
                                            placeholder="Password">
                                    </div>

                                    <br><br>

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" value="remember-me"> Remember me
                                        </label>
                                    </div>


                                    <button class="w-100 btn btn-lg btn-info" type="submit">login</button>
                                    <br><br><br><br>

                                    <span>You don't have a account : </span><a href="#">Register </a>
                                    <br><br>

                                    <a href="#">Forgot password ? </a>
                                    <br><br>
                                </form>
                                </main>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Registration -->
    <div class="tricks-modal modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="#tricksModal0Label"
        aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i
                            <i class="fas fa-times"></i></span></button>
                <div class="modal-body text-center">



                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <!-- tricks Modal - Title-->
                                <h2 class="tricks-modal-title text-secondary mb-0">Registration</h2>

                                <br> <br> <br>

                                <form>
                                    <div class="form-floating">
                                        <label for="tricks-name">User Name</label>
                                        <input type="text" class="form-control" id="tricks-name"
                                            placeholder="My user tricks-name">
                                    </div>
                                    <br>

                                    <div class="form-floating">
                                        <label for="ricks-email">Email</label>
                                        <input type="email" class="form-control" id="tricks-email"
                                            placeholder="My user tricks-name">
                                    </div>
                                    <br>

                                    <div class="form-floating">
                                        <label for="floatingPassword">Password</label>
                                        <input type="password" class="form-control" id="floatingPassword"
                                            placeholder="Password">
                                    </div>

                                    <br><br>

                                    <button class="w-100 btn btn-lg btn-info" type="submit">Create an
                                        account</button>

                                    <br><br><br>
                                    <div class="readyAccount" data-dismiss="modal" data-toggle="modal">
                                        <a href="#signin">Already an account </a>
                                    </div>
                                    <br><br>
                                </form>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>

        {% endblock %}

        {% block endContainer %}
    </div>
    </div>
    </section> {# end main area #}
    {% endblock %}

    {# footer not fixed for home page #}
    {% set current_path = app.request.get('_route') %}
    {% set ifOfOrNot = '' %}
    {% if current_path == 'home' %}
    {% set ifOfOrNot = '' %}
    {% else %}
    {% set ifOfOrNot = 'position-fixed' %}
    {% endif %}

    {% block footer %}
    <!-- Copyright Section-->
    <footer class="copyright py-4 text-center text-white {{ ifOfOrNot }}">
        <div class="container">
            <div class="footer-below">
                <div class="container">
                    <div class="row">
                        <span class="">
                            Copyright &copy; {{ "now"|date("Y") }}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    {% endblock %}

    {% block javascripts %}
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <script src="{{ app.request.getSchemeAndHttpHost() }}/js/scripts.js"></script>
    {% endblock %}

</body>

</html>