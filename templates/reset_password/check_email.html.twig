{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block main %}
<br><br><br>
<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <br>
            <br>
            <br>
            <br>
            <h2 class="tricks-modal-title text-secondary mb-0 text-center">Password Reset Email Sent</h2>
            <br><br>
            <div class="form-floating border">
                <p>
                    If an account matching your email exists, then an email was just sent that contains a link that you
                    can use to reset your password.
                    This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData,
                    'ResetPasswordBundle') }}.
                </p>
                <p>If you don't receive an email please check your spam folder or <a
                        href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
            </div>
        </div>
    </div>

    {% endblock %}