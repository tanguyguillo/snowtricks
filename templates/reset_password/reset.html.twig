{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block main %}
<br><br><br>
<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <br>
            <br>
            <br>
            <br>
            <h2 class="tricks-modal-title text-secondary mb-0 text-center">Reset password</h2>
            <br><br>
            <div class="form-floating border">
                {{ form_start(resetForm) }}

                {{ form_row(resetForm.username, {
                label: 'Username',
                attr : {'class': 'form-control'}
                }) }}

                <br>

                {{ form_row(resetForm.plainPassword, {
                label: 'Password',
                attr : {'class': 'form-control'}
                }) }}

                <br>

                <button class="w-50 btn btn-lg btn-info">Reset password</button>
                {{ form_end(resetForm) }}

            </div>
        </div>
    </div>

    <br>
    <br>
    <br>
    <br>

</div>



{% endblock %}