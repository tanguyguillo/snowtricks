{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Registration{% endblock %}

{% block main %}
<br><br><br>
<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <br>
            <br>
            <br>
            <br>
            <h2 class="tricks-modal-title text-secondary mb-0 text-center">Registration</h2>
            <br><br>
            <div class="form-floating border">

                {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username, {
                label: 'Username',
                attr : {'class': 'form-control'}
                }) }}

                <br>

                {{ form_row(registrationForm.email, {
                label: 'Email',
                attr : {'class': 'form-control'}
                }) }}

                <br>

                {{ form_row(registrationForm.plainPassword, {
                label: 'Password',
                attr : {'class': 'form-control'}
                }) }}

                <br><br>

                <button class="w-50 btn btn-lg btn-info" type="submit">Create an account</button>

                {{ form_end(registrationForm) }}

                <div>
                    <br>
                    <a href="{{ app.request.getSchemeAndHttpHost() }}/login">Already an account ?</a>
                </div>
            </div>



        </div>
    </div>
</div>
</div>

<br><br><br><br>

{% endblock %}