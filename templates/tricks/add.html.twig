                    {{ form_row(formAddTrick.category, {
                        label: 'Groupe',
                        attr : {'class': 'form-control'}
                    }) }}

                <br>

                <br><br>

                <button class="w-50 btn btn-lg btn-info" type="submit">Add this trick</button>

